<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/postLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bolder_layout"
            android:padding="20dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/myPageText">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목~"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/postDetailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내용~~~~~~~"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <ImageView
                android:id="@+id/talkImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/talkImage"
                app:layout_constraintTop_toBottomOf="@id/postDetailText"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="댓글 달기~"
                app:layout_constraintLeft_toRightOf="@id/talkImg"
                app:layout_constraintTop_toTopOf="@id/talkImg"
                app:layout_constraintBottom_toBottomOf="@id/talkImg"
                android:layout_marginLeft="10dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/talkImg"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:listitem="@layout/item_find"












        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>