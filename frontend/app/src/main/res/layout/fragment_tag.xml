<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#태그"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심사, 취미, 같이 즐기고 싶은 태그를 선택해주세요!"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tag"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                app:rowCount="5"
                app:columnCount="2"
                app:orientation="horizontal">

                <Button
                    android:id="@+id/button_sport"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/button_round"
                    android:text="#스포츠"
                    android:textColor="#39618C"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_game"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/button_round"
                    android:text="#게임"
                    android:textColor="#39618C"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_school"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#우리학교"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_hobby"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#취미"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_together"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#같이가요"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_flavor"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#취향"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#버튼7"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#버튼8"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#버튼9"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_10"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:text="#버튼10"
                    android:textColor="#39618C"
                    android:textStyle="bold"
                    android:textSize="20dp" />


            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>