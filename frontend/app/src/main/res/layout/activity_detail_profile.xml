<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailProfileActivity">

    <ImageView
        android:id="@+id/ProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:src="@drawable/setting"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/memberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MemberA"
        app:layout_constraintTop_toTopOf="@id/ProfileImage"
        app:layout_constraintLeft_toRightOf="@id/ProfileImage"
        app:layout_constraintBottom_toBottomOf="@id/ProfileImage"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/xButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/ProfileImage"
        android:src="@drawable/close"
        app:layout_constraintBottom_toBottomOf="@+id/ProfileImage"
        android:background="@android:color/transparent"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bolder_layout"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/ProfileImage">

        <TextView
            android:id="@+id/university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소속: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/university_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestSchool"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintStart_toEndOf="@id/university"
            app:layout_constraintTop_toTopOf="@id/university"
            app:layout_constraintBottom_toBottomOf="@+id/university"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="@id/editLayout"
            app:layout_constraintTop_toBottomOf="@id/university"/>

        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testAge"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintStart_toEndOf="@id/age"
            app:layout_constraintTop_toBottomOf="@id/university"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="@id/editLayout"
            app:layout_constraintTop_toBottomOf="@id/age"/>

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testGender"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintStart_toEndOf="@id/gender"
            app:layout_constraintTop_toBottomOf="@id/age"/>

        <TextView
            android:id="@+id/mytag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심 태그: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="@id/editLayout"
            app:layout_constraintTop_toBottomOf="@id/gender"/>

        <TextView
            android:id="@+id/introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한줄 소개: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="@id/editLayout"
            app:layout_constraintTop_toBottomOf="@id/mytag"/>

        <TextView
            android:id="@+id/edit_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="testString"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/introduce"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/sendButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="링크 보내기"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/editLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/send_link_button"
        android:textColor="#FFFFFF"

        />

</androidx.constraintlayout.widget.ConstraintLayout>