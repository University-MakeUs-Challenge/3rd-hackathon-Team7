<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MypageFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            >
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/myPageText"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="마이페이지"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="30dp"
                    android:textSize="25dp"/>

                <ImageButton
                    android:id="@+id/ProfileSettingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toTopOf="@+id/myPageText"
                    android:src="@drawable/setting"
                    app:layout_constraintBottom_toBottomOf="@+id/myPageText"
                    android:background="@android:color/transparent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/editLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bolder_layout"
                    android:padding="20dp"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/myPageText">

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_android_black_24dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintStart_toStartOf="@id/editLayout"
                        app:layout_constraintTop_toTopOf="@id/editLayout"/>


                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/editLayout"
                        app:layout_constraintTop_toBottomOf="@id/user"/>

                    <TextView
                        android:id="@+id/edit_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toEndOf="@id/nickname"
                        app:layout_constraintTop_toBottomOf="@id/user"/>

                    <TextView
                        android:id="@+id/university"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소속: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/editLayout"
                        app:layout_constraintTop_toBottomOf="@id/nickname"/>

                    <TextView
                        android:id="@+id/university_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TestSchool"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toEndOf="@id/university"
                        app:layout_constraintTop_toBottomOf="@id/nickname"/>

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나이: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/editLayout"
                        app:layout_constraintTop_toBottomOf="@id/university"/>

                    <TextView
                        android:id="@+id/age_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="testAge"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toEndOf="@id/age"
                        app:layout_constraintTop_toBottomOf="@id/university"/>

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="성별: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/editLayout"
                        app:layout_constraintTop_toBottomOf="@id/age"/>

                    <TextView
                        android:id="@+id/gender_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="testGender"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toEndOf="@id/gender"
                        app:layout_constraintTop_toBottomOf="@id/age"/>

                    <TextView
                        android:id="@+id/mytag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관심 태그: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/editLayout"
                        app:layout_constraintTop_toBottomOf="@id/gender"/>

                    <TextView
                        android:id="@+id/introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한줄 소개: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/editLayout"
                        app:layout_constraintTop_toBottomOf="@id/mytag"/>

                    <TextView
                        android:id="@+id/edit_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="testString"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:paddingTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/introduce"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/myTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="시간표"
                    app:layout_constraintTop_toBottomOf="@id/editLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="30dp"
                    android:textSize="25dp"/>

                <ImageButton
                    android:id="@+id/timeSettingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toTopOf="@id/myTimeText"
                    android:src="@drawable/setting"
                    app:layout_constraintBottom_toBottomOf="@+id/myTimeText"
                    android:background="@android:color/transparent"
                    />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/timeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bolder_layout"
                    android:padding="20dp"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/myTimeText">







                </androidx.constraintlayout.widget.ConstraintLayout>











            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
    
</FrameLayout>